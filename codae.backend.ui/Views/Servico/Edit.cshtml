@model codae.backend.application.ViewModels.ServicoViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>ServicoViewModel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>                        
        <input asp-for="ServicoId" type="hidden" />
                
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<h4>Composição</h4>
<div id="composicao">    
    @await Component.InvokeAsync("ComposicaoServico", Model.Composicao);
</div>

@section scripts
{
    <script type="text/javascript">
        $(function () {
            alert('jQuery ok.');
        });
    </script>
}